{
  "name": "mcp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "loadtest": "artillery run test.yml -o report.json && artillery report --output report.html report.json",
    "test": "playwright test",
    "test:coverage": "nyc playwright test",
    "test:coverage:c8": "c8 playwright test",
    "coverage:report": "nyc report --reporter=html --reporter=text",
    "coverage:report:c8": "c8 report --reporter=html --reporter=text",
    "coverage:clean": "nyc --clean && rimraf coverage .nyc_output",
    "coverage:open": "open coverage/index.html || start coverage/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.0.3",
    "artillery": "^2.0.23",
    "c8": "^10.1.3",
    "nyc": "^17.1.0"
  },
  "nyc": {
    "include": [
      "pages/**/*.js",
      "constants/**/*.js",
      "fixtures/**/*.js"
    ],
    "exclude": [
      "node_modules/**",
      "test-results/**",
      "playwright-report/**",
      "coverage/**",
      "**/*.spec.js",
      "**/*.test.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov",
      "json"
    ],
    "report-dir": "coverage",
    "temp-dir": ".nyc_output",
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "cache": false,
    "instrument": true,
    "sourceMap": false
  }
}
